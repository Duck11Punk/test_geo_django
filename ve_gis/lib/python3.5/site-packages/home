


class FileReader:

    def __str__(self):
        return '<%s => %s>' % (self.__class__.__name__, self.path)

    def __init__(self, path):
        self.path = path

    def read(self, file):
        try:
            string = file.read()
            return string
        except IOError:
            return ""
        
    def back(self, file):
        return file.seek(0)
        
